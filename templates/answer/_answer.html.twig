<li class="mb-4">
    {% if showQuestion|default(false) %}
        <a
                href="{{ path('app_question_show', {
                    slug: answer.question.slug
                }) }}"
                class="mb-1 link-secondary"
        >
            <strong>Question:</strong>
            {{ answer.questionText|u.truncate(80, '...') }}
        </a>
    {% endif %}
    <div class="d-flex justify-content-center">
        <div class="mr-2 pt-2">
            <img src="{{ asset('images/tisha.png') }}" width="50" height="50" alt="Tisha avatar">
        </div>
        <div class="mr-3 pt-2">
            {{ answer.content|parse_markdown }}
            <p>-- {{ answer.username }}</p>
        </div>
        <div class="mr-1 pt-1">
            <small>{{ answer.createdAt|ago }}</small>
        </div>
        <div class="vote-arrows flex-fill pt-2 js-vote-arrows" style="min-width: 90px;">
            <button class="vote-up btn btn-link" name="direction" value="up" data-category="{{ answer.id }}"><i class="far fa-arrow-alt-circle-up"></i></button>
            <button class="vote-down btn btn-link" name="direction" value="down" data-category="{{ answer.id }}"><i class="far fa-arrow-alt-circle-down"></i></button>
            <span>+ <span class="js-vote-total">{{ answer.votes }}</span></span>
        </div>
    </div>
</li>